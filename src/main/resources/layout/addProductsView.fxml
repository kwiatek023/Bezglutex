<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="layout.controllers.AddProductsController">

    <center>
        <VBox alignment="CENTER" spacing="10">
            <Button fx:id="breadstuffButton" prefHeight="60" prefWidth="250" mnemonicParsing="false" text="Add breadstuff" onAction="#addBreadstuff"/>
            <Button fx:id="pastaButton" prefHeight="60" prefWidth="250" mnemonicParsing="false" text="Add pasta" onAction="#addPasta"/>
            <Button fx:id="dessertsButton" prefHeight="60" prefWidth="250" mnemonicParsing="false" text="Add dessert" onAction="#addDesserts"/>
            <padding>
                <Insets top="30" bottom="30" left="30" right="30"/>
            </padding>
        </VBox>
    </center>
    <stylesheets>
        <URL value="@configure.css"/>
    </stylesheets>
</BorderPane>
